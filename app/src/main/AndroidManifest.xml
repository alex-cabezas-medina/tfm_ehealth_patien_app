<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acabezas.ehealth_patient_app">

    <application
        android:name=".core.EHealthApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".control.ControlActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".recover_password.RecoverPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".registration.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".rate.RateActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".video_conference.VideoConferenceActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".appointment_list.AppointmentListActivity" />

        <activity
            android:name=".schedule_appointment.ScheduleAppointmentActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>